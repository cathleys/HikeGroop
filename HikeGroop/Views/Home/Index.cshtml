@using HikeGroop.ViewModels
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Hike Groop</h1>
            <p class="lead text-body-secondary">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
            <p>
                <a href="#" class="btn btn-primary my-2">Join Groups</a>
                <a href="#" class="btn btn-secondary my-2">Join Destinations</a>
            </p>
        </div>
    </div>
</section>

<div class="container">
        @if (Model.Groups == null)
        {
            <h1 class="fw-light">
                There are no hiking groups in your area! 
                <a asp-area="" asp-controller="Account"
                asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-between mb-5">
                <div class="col-auto">
                    <h3>Hiking Groups near @Model.City, @Model.Region</h3>
                </div>
                <!--end of col-->
            <div class="col-auto">
              <a asp-controller="Group" 
              asp-action="Index"  
              class="btn btn-outline-primary">View all</a>
            </div>
            <!--end of col-->
          </div>
              <ul class="row feature-list feature-list-sm list-unstyled">
                @foreach (var item in Model.Groups)
                {
                <li class="col-12 col-md-6 col-lg-4 ">
                  <div class="card">
                    <a href="#">  
                      <img class="card-img-top" src="@item.Image" alt="Card image cap">
                    </a>
                    <div class="card-body">
                      <a href="#">
                        <h4 class="card-title">@item.Name</h4>
                        <p class="card-text text-body">@item.Description</p>
                      </a>
                    </div>
                    <div class="card-footer card-footer-borderless d-flex justify-content-between">
                      <div class="text-small">
                        <ul class="list-inline">
                          <li class="list-inline-item"><i class="icon-heart"></i> 221</li>
                          <li class="list-inline-item"><i class="icon-message"></i> 14</li>
                        </ul>
                      </div>
                      <div class="dropup">
                        <a type="button" 
                      asp-controller="Group"
                      asp-action="Detail"
                      asp-route-id="@item.Id"
                      class="btn btn-sm btn-outline-secondary">View</a>
                        
                      </div>
                    </div>
                  </div>
                </li>
                }
            </ul>
        }
        <!--end of row-->
    </div>
 