@model Group


@{
    ViewData["Title"] = "Group";
}

<link rel="stylesheet" href="~/css/detail.css" asp-append-version="true" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title p-2">@Model.Name</h3>
 
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6 p-1" >
                    
                    <img src="@Model.Image" 
                     style="width: 400px;">
                    
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Description</h4>
                    <p>@Model.Description</p>
                    
                    <h4 class="box-title mt-5">Address</h4>
                    <p>@Model.Address.City</p>
                    
                    <button class="btn btn-success btn-rounded mr-1">
                        Join @Model.Name
                    </button>
    

                </div>
            
            </div>
        </div>
    </div>
</div>
