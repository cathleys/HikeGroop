@using HikeGroop.ViewModels
@model GroupDetailViewModel

@{
    ViewData["Title"] = "Group detail";
    Layout = "~/Views/Shared/_GroupDetail.cshtml";
}

<div class="theme-layout">
	
		<div class="responsive-header">
		<div class="logo res"><img src="~/assets/images/logo.png" alt=""><span>HikeGroop</span></div>
		<div class="user-avatar mobile">
			<a title="View Profile"><img alt="" src="~/assets/images/resources/user.jpg"></a>
			<div class="name">
				<h4>Danial Cardos</h4>
				<span>Ontario, Canada</span>
			</div>
		</div>
		<div class="right-compact">
			<div class="sidemenu">
				<i>
					<svg id="side-menu2" xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
				</i>
			</div>
			<div class="res-search">
				<span>
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
				</span>
			</div>

		</div>
		<div class="restop-search">
			<span class="hide-search"><i class="icofont-close-circled"></i></span>
			<form method="post">
				<input type="text" placeholder="Search...">
			</form>
		</div>
	</div><!-- responsive header -->

	<header class="">
		<div class="topbar stick">
			<div class="logo"><img src="~/assets/images/logo.png" alt=""><span>HikeGroop</span></div>
			<div class="searches">
				<form method="post">
					<input type="text" placeholder="Search...">
					<button type="submit"><i class="icofont-search"></i></button>
					<span class="cancel-search"><i class="icofont-close"></i></span>
					<div class="recent-search">
						<h4 class="recent-searches">Your's Recent Search</h4>
						<ul class="so-history">
							<li>
								<div class="searched-user">
									<figure><img src="~/assets/images/resources/user1.jpg" alt=""></figure>
									<span>Danial Carabal</span>
								</div>
								<span class="trash"><i class="icofont-close-circled"></i></span>
							</li>
							
						</ul>
					</div>
				</form>
			</div>
			<ul class="web-elements">
				<li>
					<div class="user-dp">
						<a>
							
							<div class="name">
								<h4>@Model.AppUserName</h4>
							</div>
						</a>
					</div>
				</li>
				
				<li>
						<a href="#" title="">
							<i>
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-grid"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
							</i>
						</a>
						<ul class="dropdown">
							<li><a href="@Url.Action("Index","Dashboard")" title=""><i class="icofont-user-alt-3"></i> Your Dashboard</a>
							</li>
							<li><a href="@Url.Action("Index","Group")" title=""><i class="icofont-people"></i> Groups</a>
							</li>
							<li><a href="@Url.Action("Index","Destination")" title=""><i class="icofont-hill"></i> Destination</a>
							</li>
							<li><a href="@Url.Action("Index","User")" title=""><i class="icofont-users-social"></i> Hikers</a>
							</li>
							<li><a class="dark-mod" href="#"><i class="icofont-moon"></i> Dark Mode</a></li>
							<li class="logout">
								<form asp-controller="Account" asp-action="Logout">
									<button class="main-btn2"><i class="icofont-power"></i> Logout</button>
								</form>
							</li>
						</ul>
				</li>
			
			</ul>
		</div>

	</header><!-- header -->
	
	
	<section>
		<div class="gap">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div id="page-contents" class="row merged20">
							<div class="col-lg-3">
								<aside class="sidebar static left">
									<div class="widget">
										<span><i class="icofont-globe"></i> Sponsored</span>
										<ul class="sponsors-ad">
											<li>
												<figure><img alt="" src="~/assets/images/resources/sponsor.jpg"></figure>
												<div class="sponsor-meta">
													<h5><a title="" href="#">IQ Options Broker</a></h5>
													<a target="_blank" title="" href="#">www.iqvie.com</a>
												</div>
											</li>
											<li>
												<figure><img alt="" src="~/assets/images/resources/sponsor2.jpg"></figure>
												<div class="sponsor-meta">
													<h5><a title="" href="#">BM Fashion Designer</a></h5>
													<a target="_blank" title="" href="#">www.abcd.com</a>
												</div>
											</li>
										</ul>
									</div>
									<div class="widget">
										<h4 class="widget-title">Your Groups</h4>
										<ul class="ak-groups">
											<li>
												<figure><img alt="" src="~/assets/images/resources/your-group1.jpg"></figure>
												<div class="your-grp">
													<h5><a >Good Group</a></h5>
													<a title="" href="#"><i class="icofont-bell-alt"></i>Notifilactions <span>13</span></a>
													<a class="promote" >view feed</a>
												</div>
											</li>
											<li>
												<figure><img alt="" src="~/assets/images/resources/your-group2.jpg"></figure>
												<div class="your-grp">
													<h5><a >E-course Group</a></h5>
													<a href="#"><i class="icofont-bell-alt"></i>Notifications <span>13</span></a>
													<a class="promote">view feed</a>
												</div>
											</li>
										</ul>
									</div>
									<div class="widget">
										<h4 class="widget-title">Suggested Group</h4>
										<div class="sug-caro">
											<div class="friend-box">
												<figure>
													<img alt="" src="~/assets/images/resources/sidebar-info.jpg">
													<span>Members: 505K</span>
												</figure>
												<div class="frnd-meta">
													<img alt="" src="~/assets/images/resources/frnd-figure2.jpg">
													<div class="frnd-name">
														<a title="" href="#">Social Research</a>
														<span>biolabest</span>

													</div>
													<a class="main-btn2" href="#" title="">Join Community</a>
												</div>
											</div>
											<div class="friend-box">
												<figure>
													<img alt="" src="~/assets/images/resources/sidebar-info2.jpg">
													<span>Members: 505K</span>
												</figure>
												<div class="frnd-meta">
													<img alt="" src="~/assets/images/resources/frnd-figure3.jpg">
													<div class="frnd-name">
														<a title="" href="#">Bio Labest Group</a>
														<span>biolabest</span>

													</div>
													<a class="main-btn2"  title="">Join Community</a>
												</div>
											</div>
										</div>	
									</div>
 
								</aside>
							</div>
							<div class="col-lg-9">
								<div class="group-feed">
									<div class="group-avatar">
										<img src="@Model.Image" alt="image cover">
										
										<figure class="group-dp"><img src="@Model.Image" alt="avatar"></figure>
									</div>
									<div class="grp-info">
										<h4>@Model.Name <span>@Model.Name</span></h4>
                                        
                                           
                                          
										
										<ul>
											<li><span>Created:</span> April 2020</li>
											<li><span>Members:</span> 55K</li>
											<li><span>Posts:</span> 932</li>
											<li><span>Followers:</span> 2.2K</li>
                                             <li>

                                        @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))   
                                        {   <span>
                                                <a class="main-btn2"
                                                    asp-controller="Group"
                                                    asp-action="Edit"
                                                    asp-route-id="@Model.Id"
                                                    class="btn btn-sm btn-outline-secondary">Edit
                                                </a> 
                                            </span>
                                            <span>
                                                <a class="main-btn2"
                                                    asp-controller="Group"
                                                    asp-action="Delete"
                                                    asp-route-id="@Model.Id"
                                                    >Delete
                                                </a>
                                            </span>

                                            
                                           
                                        }  
                                            </li>
                                        
										</ul>
										
									</div>
									<div class="main-wraper">
										<div class="grp-about">
											<div class="row">
												<div class="col-lg-8">
													<h4>Info</h4>
													<p>@Model.Description</p>
												</div>
												<div class="col-lg-4">
													<div class="share-article">
														<span>share this Group</span>
														<a href="#" title="" class="facebook"><i class="icofont-facebook"></i></a>
														<a href="#" title="" class="pinterest"><i class="icofont-pinterest"></i></a>
														<a href="#" title="" class="instagram"><i class="icofont-instagram"></i></a>
														<a href="#" title="" class="twitter"><i class="icofont-twitter"></i></a>
														<a href="#" title="" class="google"><i class="icofont-google-plus"></i></a>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>	
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section><!-- content -->
	
	<figure class="bottom-mockup"><img  src="~/assets/images/footer.png"></figure>
	<div class="bottombar">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<span>&copy; @DateTime.Now.Year HikeGroop</span>
				</div>
			</div>
		</div>
	</div><!-- bottombar -->

	
</div>


