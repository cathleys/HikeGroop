
@model Group

@{
    ViewData["Title"] = "Group Delete";
	Layout = "~/Views/Shared/_GroupEdit.cshtml";

}



<div class="theme-layout">

	<div class="responsive-header">
		<div class="logo res"><img src="~/assets/images/logo.png" alt=""><span>HikeGroop</span></div>
		<div class="user-avatar mobile">
			<a title="View Profile"><img alt="" src="~/assets/images/resources/user.jpg"></a>
			<div class="name">
				<h4>Danial Cardos</h4>
				<span>Ontario, Canada</span>
			</div>
		</div>
		<div class="right-compact">
			<div class="sidemenu">
				<i>
<svg id="side-menu2" xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg></i>
			</div>
			<div class="res-search">
				<span>
<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg></span>
			</div>
			
		</div>
		<div class="restop-search">
			<span class="hide-search"><i class="icofont-close-circled"></i></span>
			<form method="post">
				<input type="text" placeholder="Search...">
			</form>
		</div>
	</div><!-- responsive header -->
	
	<header class="">
		<div class="topbar stick">
			<div class="logo"><img src="~/assets/images/logo.png" alt=""><span>HikeGroop</span></div>
			<div class="searches">
				<form method="post">
					<input type="text" placeholder="Search...">
					<button type="submit"><i class="icofont-search"></i></button>
					<span class="cancel-search"><i class="icofont-close"></i></span>
					<div class="recent-search">
						<h4 class="recent-searches">Your's Recent Search</h4>
						<ul class="so-history">
							
							<li>
								<div class="searched-user">
									<figure><img src="~/assets/images/resources/user5.jpg" alt=""></figure>
									<span>Jack Carter</span>
								</div>
								<span class="trash"><i class="icofont-close-circled"></i></span>
							</li>
						</ul>
					</div>
				</form>
			</div>
			<ul class="web-elements">
					
				<li>
						<a href="#" title="">
							<i>
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-grid"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
							</i>
						</a>
						<ul class="dropdown">
							<li>
                                 <form asp-area="" asp-controller="Dashboard" asp-action="Index">
                                 <button class="main-btn2" ><i class="icofont-user-alt-3"></i> Your Dashboard</button>
                                </form>
                            </li>
							<li><a class="dark-mod" href="#" title=""><i class="icofont-moon"></i> Dark Mode</a></li>
							<li class="logout">
								 <form asp-area="" asp-controller="Account" asp-action="Logout">
                                 <button class="main-btn2"><i class="icofont-power"></i> Logout</butt>
                                </form>
							</li>
						</ul>
				</li>
				</li>
			</ul>
		</div>
		
	</header><!-- header -->
	

	
    <section>
    	<div class="gap no-gap bluesh high-opacity">
			<div style="background-image: url(~/assets/images/resources/top-bg.jpg)" class="bg-image"></div>
	        <div class="container">
	        	<div class="row">
	        		<div class="col-lg-12">
	        			<div class="post-subject">
							<h1>Are you sure you want to delete this Group?</h1>
							<p> See all your group details here</p>
			            </div>
		            </div>
	            </div>
	        </div>
    	</div>
    </section>
	
    <section>
        <div class="gap">
            <div class="container">
                <div class="row">
                	<div class="col-lg-3 mb-4">
                		<nav class="responsive-tab">
		                    <ul class="nav nav-tabs uk-list">
								<li class="nav-item"><a class="active" href="#account" data-toggle="tab">Group form</a></li>
		                    </ul>
		                </nav>
                	</div>
                    <div class="col-lg-9">
                        <div class="main-wraper">
                            <div class="tab-content">
                                <!-- settings -->
                                <div class="tab-pane active fade show" >
									<div class="uk-width">
										<div class="setting-card">
											<h2>Group Settings</h2>
											<p class="mb-4">This is your group public presence on HikeGroop. 
											</p>
											<h6>Basic Profile</h6>
											<p>Edit information about your Groop</p>
											<form method="post" asp-action="Delete" enctype="multipart/form-data">
                                             <input type="hidden" value="AddressId" id="AddressId"/>
												<fieldset class="row merged-10">
													<div class="mb-4 col-lg-6">
                                                        <label asp-for="Name"></label>
														<input class="uk-input" asp-for="Name" type="text" placeholder="First Name">
													    <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>

													<div class="mb-4 col-lg-6">
                                                        <label asp-for="Address.City"></label>
														<input class="uk-input"  asp-for="Address.City"  type="text" placeholder="City Address">
													    <span asp-validation-for="Address.City" class="text-danger"></span>
                                                    </div>

													<div class="mb-4 col-lg-6">
                                                         <label asp-for="Image"></label>
														<input class="uk-input" asp-for="Image" type="file" placeholder="Image">
														<span asp-validation-for="Image" class="text-danger"></span>
													</div>

													<div class="mb-4 col-lg-12">
                                                        <label asp-for="Description"></label>
														<textarea class="uk-textarea"  asp-for="Description" rows="4" placeholder="Description"></textarea>
													    <span asp-validation-for="Description" class="text-danger"></span>
                                                    </div>
													
					
													<div class="mb-0 col-lg-12">
                                                          <form action="Delete" method="post">
                                                                <input type="hidden" asp-for="Id" />
                                                                <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
                                                            </form>
													
													</div>	
												</fieldset>
											</form>
										</div>
									</div>
                                </div>
                                <!-- Notification -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
   
	<figure class="bottom-mockup"><img src="~/assets/images/footer.png" alt=""></figure>
	<div class="bottombar">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<span> &copy; @DateTime.Now.Year HikeGroop</span>
				</div>
			</div>
		</div>
	</div><!-- bottombar -->


	
</div>
