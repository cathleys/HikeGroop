@using HikeGroop.Data
@using HikeGroop.ViewModels

@model cloudscribe.Pagination.Models.PagedResult<Group>
@{
	ViewData["Title"] = "Groups";
	ViewData["Controller"] = "Group";
	ViewData["Action"] = "Index";
	Layout = "~/Views/Shared/_Layout2.cshtml";

}



<section>
	<div class="gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div id="page-contents" class="row merged20">
						<div class="col-lg-9">
							<div class="main-wraper">
								<h4 class="main-title"><i class=""><svg class="feather feather-users"
											stroke-linejoin="round" stroke-linecap="round" stroke-width="2"
											stroke="currentColor" fill="none" viewBox="0 0 24 24" height="18" width="18"
											xmlns="http://www.w3.org/2000/svg">
											<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
											<circle r="4" cy="7" cx="9" />
											<path d="M23 21v-2a4 4 0 0 0-3-3.87" />
											<path d="M16 3.13a4 4 0 0 1 0 7.75" />
										</svg></i> Groups</h4>
								<div class="row col-xs-6">

									@foreach (var item in Model.Data)
									{
										<div class="col-lg-3 col-md-4 col-sm-4">
											<div class="group-box">
												<figure><img src="@item.Image"></figure>
												<a>@item.Name</a>
												<small>101 Members</small>
												<br />
												<div class="btn-group">
													<a type="button" asp-controller="Group" asp-action="Detail"
														asp-route-id="@item.Id" class="button soft-success">
														View
													</a>

													@if (User.Identity.IsAuthenticated &&
																								User.IsInRole(UserRoles.Admin))
													{
														<a type="button" asp-controller="Group" asp-action="Edit"
															asp-route-id="@item.Id" class="button soft-info">Edit
														</a>
														<a type="button" asp-controller="Group" asp-action="Delete"
															asp-route-id="@item.Id" class="button soft-danger">Delete
														</a>
													}
												</div>
											</div>
										</div>

									}




								</div>

								@* Pagination *@
								<div class="col-lg-12">
									<div class="load mb-4">
										<ul class="pagination">
											<partial name="_PaginationPartial" view-data="ViewData" model="Model" />
										</ul>
									</div>
								</div>
							</div>

						</div>
						<div class="col-lg-3">
							<aside class="sidebar static right">
								<div class="widget">
									<h4 class="widget-title">Hiking Activities</h4>
									<div class="popular-book">
										<figure><img src="~/assets/images/resources/hikecomm.jpg" alt=""></figure>
										<div class="book-about">
											<h6><a href="#" title="">Treasure Mountain (Rizal)</a></h6>
											<span>Richard Ali</span>
											<a href="#" title="Book Mark">
												<i class="">
													<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
														viewBox="0 0 24 24" fill="none" stroke="currentColor"
														stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
														class="feather feather-bookmark">
														<path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z">
														</path>
													</svg>
												</i>
											</a>
										</div>
										<div class="popular-book">
											<figure><img src="~/assets/images/resources/hikecomm.jpg" alt=""></figure>
											<div class="book-about">
												<h6><a href="#" title="">Mt. Manalmon (Bulacan)</a></h6>
												<span>Charmaine Mendoza</span>
												<a href="#" title="Book Mark">
													<i class="">
														<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
															viewBox="0 0 24 24" fill="none" stroke="currentColor"
															stroke-width="2" stroke-linecap="round"
															stroke-linejoin="round" class="feather feather-bookmark">
															<path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z">
															</path>
														</svg>
													</i>
												</a>
											</div>
										</div>
									</div>
							</aside>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
