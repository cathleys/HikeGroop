@using HikeGroop.ViewModels;
@model EditGroupViewModel

@{
	ViewData["Title"] = "Group Edit";
	ViewData["Controller"] = "Group";
	ViewData["Action"] = "Index";
	Layout = "~/Views/Shared/_Layout2.cshtml";

}

<section>
	<div class="gap no-gap bluesh high-opacity">
		<div style="background-image: url(~/assets/images/resources/top-bg.jpg)" class="bg-image"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="post-subject">
						<h1>Group Form</h1>
						<p> Edit your group here.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<section>
	<div class="gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 mb-4">
					<nav class="responsive-tab">
						<ul class="nav nav-tabs uk-list">
							<li class="nav-item"><a class="active" href="#account" data-toggle="tab">Group form</a>
							</li>
						</ul>
					</nav>
				</div>
				<div class="col-lg-9">
					<div class="main-wraper">
						<div class="tab-content">
							<!-- settings -->
							<div class="tab-pane active fade show">
								<div class="uk-width">
									<div class="setting-card">
										<h2>Group Settings</h2>
										<p class="mb-4">This is your group public presence on HikeGroop.
										</p>
										<h6>Basic Profile</h6>
										<p>Edit information about your Groop</p>
										<form method="post" asp-action="Edit" enctype="multipart/form-data">
											<input type="hidden" value="AddressId" id="AddressId" />
											<fieldset class="row merged-10">
												<div class="mb-4 col-lg-6">
													<label asp-for="Name"></label>
													<input class="uk-input" asp-for="Name" type="text"
														placeholder="First Name">
													<span asp-validation-for="Name" class="text-danger"></span>
												</div>

												<div class="mb-4 col-lg-6">
													<label asp-for="Address.City"></label>
													<input class="uk-input" asp-for="Address.City" type="text"
														placeholder="City Address">
													<span asp-validation-for="Address.City" class="text-danger"></span>
												</div>

												<div class="mb-4 col-lg-6">
													<label asp-for="Image"></label>
													<input class="uk-input" asp-for="Image" type="file"
														placeholder="Image">
													<span asp-validation-for="Image" class="text-danger"></span>
												</div>

												<div class="mb-4 col-lg-12">
													<label asp-for="Description"></label>
													<textarea class="uk-textarea" asp-for="Description" rows="4"
														placeholder="Description"></textarea>
													<span asp-validation-for="Description" class="text-danger"></span>
												</div>


												<div class="mb-0 col-lg-12">
													<button type="submit" class="button primary circle">Save
														Changes</button>
												</div>
											</fieldset>
										</form>
									</div>
								</div>
							</div>
							<!-- Notification -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
