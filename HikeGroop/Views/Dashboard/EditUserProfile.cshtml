@using HikeGroop.ViewModels
@using HikeGroop.Data.Enums
@model EditUserDashboardViewModel

@{
    ViewData["Title"] = "Edit Your Profile";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}

<section>
    <div class="gap no-gap bluesh high-opacity">
        <div style="background-image: url(~/assets/images/resources/top-bg.jpg)" class="bg-image"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="post-subject">
                        <h1>User Profile</h1>
                        <p> Edit profile here.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 mb-4">
                    <nav class="responsive-tab">
                        <ul class="nav nav-tabs uk-list">
                            <li class="nav-item"><a class="active" href="#account" data-toggle="tab">Destination
                                    form</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-9">
                    <div class="main-wraper">
                        <div class="tab-content">
                            <!-- settings -->
                            <div class="tab-pane active fade show">
                                <div class="uk-width">
                                    <div class="setting-card">
                                        <h2>Profile Settings</h2>
                                        <p class="mb-4">This is your public presence on HikeGroop.
                                        </p>
                                        <h6>Basic Profile</h6>
                                        <p>Information about you</p>
                                        <form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
                                            <input type="hidden" id="Id" name="Id" asp-for="Id" />
                                            <fieldset class="row merged-10">

                                                <div class="mb-4 col-lg-12">
                                                    <label asp-for="Username">Username</label>
                                                    <input asp-for="Username" class="form-control"
                                                        placeholder="Username">
                                                    <span asp-validation-for="Username" class="text-danger"></span>
                                                </div>
                                                <div class="mb-4 col-lg-12">
                                                    <label asp-for="City">City</label>
                                                    <input asp-for="City" class="form-control" placeholder="City">
                                                    <span asp-validation-for="City" class="text-danger"></span>
                                                </div>

                                                <div class="mb-4 col-lg-12">
                                                    <label asp-for="HikerType">Hiker Type</label>
                                                    <select asp-for="HikerType"
                                                        asp-items="@Html.GetEnumSelectList<HikerType>()"
                                                        class="form-control form-control-md">
                                                        <option>--select--</option>
                                                    </select>
                                                    <span asp-validation-for="HikerType" class="text-danger"></span>
                                                </div>


                                                <div class="mb-4 col-lg-12">
                                                    <label asp-for="Image">Profile Image</label>
                                                    <input asp-for="Image" type="file" class="form-control"
                                                        placeholder="Image">
                                                    <span asp-validation-for="Image" class="text-danger"></span>
                                                </div>


                                                <div class="mb-0 col-lg-12">
                                                    <button type="submit" class="button primary circle">Save
                                                        Changes</button>
                                                </div>
                                            </fieldset>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Notification -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
