@using HikeGroop.Data;
@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Destinations";
}

<h1>Destinations</h1>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach(var item in Model)
            {
            <div class="col">
                
                <div class="card shadow-sm">
                   <img class="card-image-top" src="@item.Image" alt="dest photos">
                    <div class="card-body">
                        <p class="card-text">@item.Title</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="button" class="btn btn-sm btn-outline-secondary"
                                asp-controller="Destination"
                                asp-action="Detail"
                                asp-route-id="@item.Id"
                                >View</a>

                            @if(User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                            {

                                <a type="button"
                                       asp-controller="Destination"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                    class="btn btn-sm btn-outline-secondary">Edit
                                </a> 
                                <a type="button"
                                       asp-controller="Destination"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id"
                                    class="btn btn-sm btn-outline-secondary">Delete
                                </a>
                            }
                            </div>
                            <small class="text-body-secondary">@item.HikingTour</small>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
          
    </div>
</div>