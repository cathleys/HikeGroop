@using HikeGroop.Data;
@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Destinations";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


	<section>
		<div class="gap">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div id="page-contents" class="row merged20">
							<div class="col-lg-3">
								<aside class="sidebar static right">
									<div class="widget">
										<h4 class="widget-title">Popular Blog</h4>
										<div class="popular-book">
											<figure><img src="~/assets/images/resources/book10.jpg" alt=""></figure>
											<div class="book-about">
												<h6><a href="#" title="">Blog post title</a></h6>
												<span></span>
												<a href="#" title=""><i class="icofont-book-mark"></i></a>
											</div>
										</div>
										<div class="popular-book">
											<figure><img src="~/assets/images/resources/book9.jpg" alt=""></figure>
											<div class="book-about">
												<h6><a href="#" title="">Css3 for Bigners</a></h6>
												<span>Richard Ali</span>
												<a href="#" title=""><i class="icofont-book-mark"></i></a>
											</div>
										</div>
										<div class="popular-book">
											<figure><img src="~/assets/images/resources/book5.jpg" alt=""></figure>
											<div class="book-about">
												<h6><a href="#" title="">Technology Wants 2020</a></h6>
												<span>Richard Ali</span>
												<a href="#" title=""><i class="icofont-book-mark"></i></a>
											</div>
										</div>
									</div>

								</aside>
							</div>
							<div class="col-lg-9">
								<ul class="nav nav-tabs about-btn mb-4">
									<li class="nav-item"><a class="active" href="#posts" data-toggle="tab">All</a></li>
									<li class="nav-item"><a class="" href="#pictures" data-toggle="tab">Day Hike</a></li>
									<li class="nav-item"><a class="" href="#pictures" data-toggle="tab">Multi Day Hike</a></li>
									<li class="nav-item"><a class="" href="#videos" data-toggle="tab">Beginner</a></li>
									<li class="nav-item"><a class="" href="#videos" data-toggle="tab">Intermediate</a></li>
									<li class="nav-item"><a class="" href="#videos" data-toggle="tab">Advance</a></li>
			
								</ul>
							
								<div class="main-wraper">
									<div class="main-title">Hiking activities you may want to join</div>
									<div class="row">
                                         @foreach(var item in Model)
                                         {
										<div class="col-lg-4 col-md-4 col-sm-6">
											<div class="event-post mb-3">
												<figure><a href="event-detail.html" ><img src="@item.Image" alt=""></a></figure>
												<div class="event-meta">
													<span>Book Schedule</span>
													<h6><a href="event-detail.html">@item.Title</a></h6>
													<p>@item.Description</p>
													<a class="classic-btn" href="#">Interested</a>
													<div class="more">
														<div class="more-post-optns">
															<i class="">
	<svg class="feather feather-more-horizontal" stroke-linejoin="round" stroke-linecap="round" stroke-width="2" stroke="currentColor" fill="none" viewBox="0 0 24 24" height="24" width="24" xmlns="http://www.w3.org/2000/svg"><circle r="1" cy="12" cx="12"/><circle r="1" cy="12" cx="19"/><circle r="1" cy="12" cx="5"/></svg></i>
															
                                                            <ul>
                                                                <li >
                                                                <a  asp-controller="Destination"
                                                                    asp-action="Detail"
                                                                    asp-route-id="@item.Id">
                                                                       
																	<i class="icofont-ui-text-chat"></i>View Details
                                                                </a>
																	<span>View this destination details</span>
																</li>
                                                            @if(User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                                                            {
																<li>
																	<a asp-controller="Destination"
																		asp-action="Edit"
																		asp-route-id="@item.Id"
																	>

																	<i class="icofont-share-alt"></i>Edit Information
																	</a>
																	<span>Edit this destination</span>
																</li>

																<li>
																	<a asp-controller="Destination"
																		asp-action="Delete"
																		asp-route-id="@item.Id"
																	>
																	<i class="icofont-ui-delete"></i>Delete Post
																	</a>
																	<span>If inappropriate Post By Mistake</span>
																</li>
																
                                                            }
															</ul>
														</div>
													</div>
												</div>
											</div>
										</div>

                                         }
								
									</div>
								</div>	
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	

	


