<!DOCTYPE html>

<html>

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <title>HikeGroop</title>
        <link rel="icon" href="~/assets/images/logo.png" type="image/png" sizes="16x16">

        <link rel="stylesheet" href="~/assets/css/main.min.css">
        <link rel="stylesheet" href="~/assets/css/style.css">
        <link rel="stylesheet" href="~/assets/css/color.css">
        <link rel="stylesheet" href="~/assets/css/responsive.css">
    </head>

    <body>
        <partial name="_LoadingSpinnerPartial" />

        <div class="theme-layout">

            <partial name="_SearchBarPartial" view-data="ViewData" model="Model" />

            <nav class="sidebar">
                <ul class="menu-slide">
                    <li class="active menu-item-has-children">
                        <a class="" href="#" title="">
                            <i><svg id="icon-home" class="feather feather-home" stroke-linejoin="round"
                                    stroke-linecap="round" stroke-width="2" stroke="currentColor" fill="none"
                                    viewBox="0 0 24 24" height="14" width="14" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                                    <polyline points="9 22 9 12 15 12 15 22" />
                                </svg></i> Home
                        </a>
                        <ul class="submenu">
                            <li><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                            <li><a href="@Url.Action("Index","User")">Hikers</a></li>
                            <li><a href="@Url.Action("Index","Group")">Groups</a></li>
                            <li><a href="@Url.Action("Index","Destination")">Destinations</a></li>
                            <li><a class="dark-mod" href="#">Dark Mode</a></li>
                            <li>
                                <form asp-area="" asp-controller="Account" asp-action="Logout">
                                    <button class="button soft-success">Logout</button>
                                </form>
                            </li>


                        </ul>
                    </li>
                </ul>
            </nav>


            <div>
            @RenderBody()
            </div>



            <figure class="bottom-mockup"><img src="~/assets/images/footer.png" alt=""></figure>
            <div class="bottombar">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <span> &copy; @DateTime.Now.Year HikeGroop</span>
                        </div>
                    </div>
                </div>
            </div><!-- bottombar -->



        </div>

        <script src="~/assets/js/main.min.js"></script>
        <script src="~/assets/js/script.js"></script>
        <script src="~/assets/js/user-invite.js"></script>
    </body>

</html>
